    ViewData["Title"] = "EditTitular";
}

<h4>Dados pessoais</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="EditTitular">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-12 ">
